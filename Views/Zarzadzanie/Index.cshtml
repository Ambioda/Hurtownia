@model Hurtownia.ViewModels.ManageCredentialsViewModel

@{
    ViewBag.Title = "Zarządzanie kontem";
    Layout = "~/Views/Shared/_ZarzadzajLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            @if (ViewBag.UserIsAdmin)
            {
                <div class="alert alert-info">
                    Jesteś zalogowany jako administrator.
                </div>
            }

            <h2>Zarządzaj danymi użytkownika</h2>
            @using (Html.BeginForm("ChangeProfile", "Zarzadzanie"))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.DaneUzytkownika.Imie, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DaneUzytkownika.Imie, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DaneUzytkownika.Imie, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DaneUzytkownika.Nazwisko, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DaneUzytkownika.Nazwisko, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DaneUzytkownika.Nazwisko, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DaneUzytkownika.Adres, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DaneUzytkownika.Adres, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DaneUzytkownika.Adres, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DaneUzytkownika.Miasto, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DaneUzytkownika.Miasto, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DaneUzytkownika.Miasto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DaneUzytkownika.Kod_Pocztowy, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DaneUzytkownika.Kod_Pocztowy, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DaneUzytkownika.Kod_Pocztowy, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DaneUzytkownika.Telefon, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DaneUzytkownika.Telefon, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DaneUzytkownika.Telefon, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DaneUzytkownika.Email, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.DaneUzytkownika.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DaneUzytkownika.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6">
            <h2>Zmiana hasła</h2>
            @using (Html.BeginForm("ChangePassword", "Zarzadzanie", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.ChangePasswordViewModel.OldPassword, "Podaj stare hasło", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.ChangePasswordViewModel.OldPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ChangePasswordViewModel.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ChangePasswordViewModel.NewPassword, "Podaj Nowe hasło", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.ChangePasswordViewModel.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ChangePasswordViewModel.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ChangePasswordViewModel.ConfirmPassword, "Potwierdź nowe hasło", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.ChangePasswordViewModel.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ChangePasswordViewModel.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-primary">Zmień hasło</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>