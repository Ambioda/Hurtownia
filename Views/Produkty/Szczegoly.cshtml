@model Hurtownia.Models.Produkt
@using Hurtownia.Infrastruktura
@{
    ViewBag.Title = "Szczegoly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        @Html.Action("KategorieMenu")

        <div class="col-md-8">
            <div class="col-md-9">
                <h2>@Model.NazwaProduktu</h2>

                <div class="row">
                    <div class="col-md-6">
                        <img src="@Url.ObrazkiSciezka(Model.NazwaPlikuObrazka)" alt="Obrazek Produktu" class="img-fluid">
                    </div>
                    <div class="col-md-6">
                        <h4>Cena: <span class="text-muted">@Model.CenaProduktu - zł</span></h4>
                        <h5>Ilość dostępna: <span class="text-muted">0 szt.</span></h5>
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"
                                onclick="location.href='@Url.Action("DodajDoKoszyka", "Koszyk", new { id = Model.ProduktId })'">
                            Kup za @Model.CenaProduktu zł
                        </button>
                    </div>
                    <h2>Opis produktu:</h2>
                    
                        <div class="col-md-4">
                    @Model.OpisProduktu
                        
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>


